# ===== 애플리케이션 설정 =====
APP_NAME=AI Image Community API
APP_VERSION=1.0.0
DEBUG=True

# ===== 데이터베이스 설정 =====
# 로컬 개발용 (docker-compose 사용)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/ai_image_community

# ===== JWT 설정 (임시 개발용 키) =====
# 실제 운영에서는 Django Auth 서버에서 제공받은 Public Key를 사용해야 합니다
JWT_ALGORITHM=RS256
JWT_PUBLIC_KEY="-----BEGIN PUBLIC KEY-----
REPLACE_WITH_ACTUAL_PUBLIC_KEY
-----END PUBLIC KEY-----"

# 개발 전용 토큰 발급 라우트 활성화 (dev에서만 true)
# 운영(prod)에서는 설정하지 않거나 false로 유지하세요
ENABLE_DEV_AUTH=true

# ===== 파일 업로드 설정 =====
## 스토리지 백엔드 선택: local | s3
STORAGE_BACKEND=local

## 로컬 스토리지 설정 (STORAGE_BACKEND=local일 때 사용)
# 업로드 디렉토리 경로
UPLOAD_DIR=./uploads/images

# 최대 파일 크기 (바이트 단위, 10MB = 10485760)
MAX_FILE_SIZE=10485760

# 허용되는 파일 확장자 (JSON 배열 형식)
ALLOWED_EXTENSIONS=["jpg","jpeg","png","gif","webp"]

## S3 스토리지 설정 (STORAGE_BACKEND=s3일 때 사용)
# AWS 리전 (예: ap-northeast-2)
# AWS_REGION=ap-northeast-2

# 업로드할 S3 버킷명
# AWS_S3_BUCKET=your-bucket-name

# 버킷 내 저장 경로 프리픽스 (끝에 슬래시 없이)
# 예: uploads/images -> 결과 키: uploads/images/<uuid>.jpg
# AWS_S3_PREFIX=uploads/images

# 업로드 ACL (퍼블릭 접근 필요 시 public-read, 비공개면 private)
# AWS_S3_ACL=public-read

# 커스텀 엔드포인트(예: Minio) 사용 시 설정 (없으면 빈 값)
# AWS_S3_ENDPOINT_URL=

# 공개 URL 베이스 오버라이드 (예: CloudFront 도메인)
# 설정 시 최종 URL = $AWS_S3_PUBLIC_URL/<key>
# AWS_S3_PUBLIC_URL=https://cdn.example.com

# ===== CORS 설정 (선택사항) =====
# 허용할 오리진 (콤마로 구분)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== 서버 설정 =====
HOST=0.0.0.0
PORT=8000
